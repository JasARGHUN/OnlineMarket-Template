@model int

<div class="container">
    <div class="card mt-4 p-2">
        <div class="card-header">
            <h3>Order Submitted Successfully!</h3>
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <h5 class="text-center">Thank you for order!</h5>
                <h6 class="text-center">We have received your order and we will send a follow up email shorty!</h6>
                <hr />
                <footer class="blockquote-footer">Your order number: <cite title="Source Title"><strong>@Model</strong></cite></footer>
            </blockquote>
        </div>
    </div>
</div>